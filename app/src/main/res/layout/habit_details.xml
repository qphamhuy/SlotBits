<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/habit_progress_card"
                style="@style/SlotBitsTheme.HabitCardView"
                android:layout_marginTop="@dimen/small_margin"
                android:visibility="gone">

                <LinearLayout
                    style="@style/SlotBitsTheme.HabitCardView.InnerLayout"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/medium_margin">

                        <TextView
                            android:id="@+id/habit_status_title"
                            style="@style/SlotBitsTheme.TitleText"
                            android:layout_alignBaseline="@id/habit_status_remaining_time"
                            android:text="@string/title_habit_progress_card" />

                        <ProgressBar
                            android:id="@+id/habit_status_progressbar"
                            style="?android:attr/progressBarStyle"
                            android:layout_width="@dimen/regular_font_size"
                            android:layout_height="@dimen/regular_font_size"
                            android:layout_centerVertical="true"
                            android:layout_toStartOf="@id/habit_status_remaining_time"
                            android:indeterminate="true" />

                        <TextView
                            android:id="@+id/habit_status_remaining_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true" />
                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="Completing at 05:22PM." />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <Button
                            android:id="@+id/habit_details_stop"
                            style="@style/SlotBitsTheme.HabitCardView.Action"
                            android:layout_alignParentEnd="true"
                            android:onClick="onStopButtonClick"
                            android:text="STOP" />
                    </RelativeLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/habit_history_card"
                style="@style/SlotBitsTheme.HabitCardView"
                android:layout_marginTop="@dimen/small_margin">

                <LinearLayout
                    style="@style/SlotBitsTheme.HabitCardView.InnerLayout"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/habit_history_title"
                        style="@style/SlotBitsTheme.TitleText"
                        android:text="@string/title_habit_history_card" />

                    <TextView
                        android:id="@+id/habit_history_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>
    </ScrollView>

</LinearLayout>