<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:slotbits="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/large_margin">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/SlotBitsTheme.SubtleText"
        android:text="@string/label_habit_edit_name"/>

    <EditText
        android:id="@+id/habit_name_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/label_habit_edit_name"
        android:layout_marginLeft="@dimen/small_margin"
        android:layout_marginBottom="@dimen/small_margin" />

    <com.gregacucnik.EditableSeekBar
        android:id="@+id/habit_slot_length_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        slotbits:esbMax="60"
        slotbits:esbMin="1"
        slotbits:esbTitle="@string/label_habit_edit_length"
        slotbits:esbTitleAppearance="@style/SlotBitsTheme.SubtleText"/>

</LinearLayout>